{
    "name": "denisyukphp/tmpfile",
    "description": "Alternative to tmpfile() function",
    "keywords": ["tmpfile", "tempnam", "temp", "tmp", "file"],
    "license": "MIT",
    "authors": [
        {
            "name": "Aleksandr Denisyuk",
            "email": "a@denisyuk.by",
            "homepage": "https://denisyuk.by/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.4"
    },
    "suggest": {
        "denisyukphp/tmpfile-manager": "Allows more advanced using temp files"
    },
    "autoload": {
        "psr-4": {
            "TmpFile\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TmpFile\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always"
    }
}
